# Server Configuration
PORT=5001
NODE_ENV=production

# MongoDB Connection
MONGO_URI=mongodb://mongodb:27017/boxwise

# JWT Secret for Authentication
# Generate a secure random string for production
# You can use: openssl rand -base64 32
JWT_SECRET=your_secure_jwt_secret_here
JWT_EXPIRE=30d

# Asset ID Configuration
ASSET_ID_AUTO_INCREMENT=true
ASSET_ID_PREFIX=000-

# File Upload Limits
MAX_FILE_SIZE=5000000

# UPC Lookup API (Optional for development, recommended for production)
# Sign up at https://www.upcitemdb.com/api/signup to get your API key
# UPC_API_KEY=your_api_key_here
