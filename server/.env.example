# Server Configuration
PORT=5001
NODE_ENV=development

# MongoDB Connection
MONGO_URI=mongodb://localhost:27017/boxwise

# JWT Secret for Authentication
# Example: Use `openssl rand -base64 32` to generate a secure random string
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRE=30d

# Asset ID Configuration
ASSET_ID_AUTO_INCREMENT=true
ASSET_ID_PREFIX=000-

# File Upload Limits
MAX_FILE_SIZE=5000000

# UPC Lookup API (Using free tier)
# No API key needed for the free trial version
UPC_API_URL=https://api.upcitemdb.com/prod/trial/lookup
